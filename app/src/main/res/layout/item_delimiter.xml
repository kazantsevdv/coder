<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/line_start"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_margin_start"
        android:contentDescription="@string/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_line" />

    <ImageView
        android:id="@+id/line_end"
        android:layout_width="@dimen/item_img_size"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_margin_start"
        android:contentDescription="@string/line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_line" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/item_year_size"
        android:layout_marginVertical="@dimen/item_year_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/line_end"
        app:layout_constraintStart_toEndOf="@+id/line_start"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2022" />
</androidx.constraintlayout.widget.ConstraintLayout>